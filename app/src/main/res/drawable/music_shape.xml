<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
<shape

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

<gradient android:centerColor="#00BCD4" android:endColor="#fff"
    android:startColor="#fff"/>
    <size
        android:width="32dp"
        android:height="32dp"/>
</shape>
    </item>
    <item android:state_pressed="true">
        <shape

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <gradient android:centerColor="#00BCD4" android:endColor="#fff"
                android:startColor="#fff" android:angle="45"/>
            <size
                android:width="32dp"
                android:height="32dp"/>
        </shape>

    </item>
</selector>